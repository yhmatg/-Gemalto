<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/plCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_pl_ord_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:text="Ord"
                android:textColor="#5a5a76"
                app:layout_constraintEnd_toStartOf="@+id/gl_pl_start"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_pl_ref_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:text="Ref"
                android:textColor="#5a5a76"
                app:layout_constraintEnd_toStartOf="@+id/gl_pl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_ord_tip" />

            <TextView
                android:id="@+id/tv_pl_bat_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:text="Bat"
                android:textColor="#5a5a76"
                app:layout_constraintEnd_toStartOf="@+id/gl_pl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_ref_tip" />

            <TextView
                android:id="@+id/tv_pl_cus_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:text="Cus"
                android:textColor="#5a5a76"
                app:layout_constraintEnd_toStartOf="@+id/gl_pl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_bat_tip" />

            <TextView
                android:id="@+id/tv_pl_pro_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:text="Pro"
                android:textColor="#5a5a76"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/gl_pl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_cus_tip" />

            <android.support.constraint.Guideline
                android:id="@+id/gl_pl_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="40dp" />

            <TextView
                android:id="@+id/tv_pl_ord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#5a5a76"
                app:layout_constraintStart_toEndOf="@+id/gl_pl_start"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="SQQ21456.001" />

            <TextView
                android:id="@+id/tv_pl_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#5a5a76"
                app:layout_constraintStart_toEndOf="@+id/gl_pl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_ord"
                tools:text="U1131561A22" />

            <TextView
                android:id="@+id/tv_pl_bat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#5a5a76"
                app:layout_constraintStart_toEndOf="@+id/gl_pl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_ref"
                tools:text="REAL" />

            <TextView
                android:id="@+id/tv_pl_cus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#5a5a76"
                app:layout_constraintStart_toEndOf="@+id/gl_pl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_bat"
                tools:text="乌克兰" />

            <TextView
                android:id="@+id/tv_pl_pro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="#5a5a76"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/gl_pl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_cus"
                tools:text="POLLYSERVICE UA OYP BANK MC EWWEFDFF21123" />

            <TextView
                android:id="@+id/tv_pl_aco_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:text="Aco"
                android:textColor="#5a5a76"
                app:layout_constraintEnd_toStartOf="@+id/gl_pl_end"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_pl_mmyy_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:text="mmyy"
                android:textColor="#5a5a76"
                app:layout_constraintEnd_toStartOf="@+id/gl_pl_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_ord_tip" />

            <TextView
                android:id="@+id/tv_pl_qty_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:text="Qty"
                android:textColor="#5a5a76"
                app:layout_constraintEnd_toStartOf="@+id/gl_pl_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_ref_tip" />

            <TextView
                android:id="@+id/tv_pl_inlay_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:text="inlay"
                android:textColor="#5a5a76"
                app:layout_constraintEnd_toStartOf="@+id/gl_pl_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_qty_tip" />

            <android.support.constraint.Guideline
                android:id="@+id/gl_pl_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="90dp" />

            <TextView
                android:id="@+id/tv_pl_aco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#5a5a76"
                app:layout_constraintStart_toEndOf="@+id/gl_pl_end"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="A2325494" />

            <TextView
                android:id="@+id/tv_pl_mmyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#5a5a76"
                app:layout_constraintStart_toEndOf="@+id/gl_pl_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_ord"
                tools:text="0219" />

            <TextView
                android:id="@+id/tv_pl_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#5a5a76"
                app:layout_constraintStart_toEndOf="@+id/gl_pl_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_ref"
                tools:text="500" />

            <TextView
                android:id="@+id/tv_pl_inlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#5a5a76"
                app:layout_constraintStart_toEndOf="@+id/gl_pl_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_pl_qty_tip"
                tools:text="A1149454" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/badNoCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:gravity="start"
                android:text="坏卡数量"
                android:textColor="#5a5a76" />

            <EditText
                android:id="@+id/badNoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@null"
                android:ems="10"
                android:hint="1-1000"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="#5a5a76"
                android:textSize="14sp">

                <requestFocus />
            </EditText>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/modify"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:visibility="visible"
        app:cardBackgroundColor="#1dc263"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/badNoCardView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="剔除坏卡"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/reset"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:visibility="visible"
        app:cardBackgroundColor="#1dc263"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modify">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="复原剔除"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>